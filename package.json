{
  "name": "slowpoke",
  "version": "0.1.0",
  "description": "A Discord bot written in TypeScript - converted from Rust",
  "packageManager": "pnpm@10.28.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean && pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript"
  ],
  "author": "Jeph",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.42.0",
    "@langchain/textsplitters": "^1.0.1",
    "discord.js": "^14.25.1",
    "dotenv": "^17.3.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "protobufjs"
    ]
  }
}
