{
  "name": "slowpoke",
  "version": "0.1.0",
  "description": "A Discord bot written in TypeScript - converted from Rust",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "deploy-commands": "NODE_OPTIONS=\"--experimental-specifier-resolution=node\" TS_NODE_PROJECT=tsconfig.node.json node --loader ts-node/esm src/deploy-commands.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript"
  ],
  "author": "Jeph",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.15.0",
    "discord.js": "^14.22.0",
    "dotenv": "^17.2.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "neostandard": "^0.12.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
